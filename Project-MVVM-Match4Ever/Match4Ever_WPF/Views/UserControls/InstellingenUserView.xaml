<UserControl x:Class="Match4Ever_WPF.Views.UserControls.InstellingenUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Match4Ever_WPF.Views.UserControls"
             xmlns:commands="clr-namespace:Match4Ever_WPF.State.Commands"
             xmlns:comps="clr-namespace:Match4Ever_WPF.Components"
             mc:Ignorable="d" 
             Style="{StaticResource UserControlStijl}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="1.15*"/>
            </Grid.ColumnDefinitions>

            <!--PROFIEL FOTO INSTELLEN-->
            <TextBlock Text="Profielfoto uploaden" Style="{StaticResource InstellingenTextBlock}"/>
            <ComboBox ItemsSource="{Binding FotoLinks}" SelectedItem="{Binding FotoLink}" Grid.Column="1" Style="{StaticResource InstellingenComboBox}"/>

            <!--GEAARDHEID AANPASSEN-->
            <TextBlock Text="Geaardheid" Grid.Row="1" Style="{StaticResource InstellingenTextBlock}"/>
            <ComboBox ItemsSource="{Binding GeaardheidLijst}" SelectedItem="{Binding Geaardheid}" Grid.Row="1" Grid.Column="1" Style="{StaticResource InstellingenComboBox}"/>

            <!--LOCATIE AANPASSEN-->
            <TextBlock Text="Locatie" Grid.Row="2" Style="{StaticResource InstellingenTextBlock}"/>
            <ComboBox ItemsSource="{Binding StadLijst}" SelectedItem="{Binding Stad}" Grid.Row="2" Grid.Column="1" Style="{StaticResource InstellingenComboBox}"/>

            <!--FOTO WEERGEVEN-->
            <Rectangle Fill="{Binding Foto}" Grid.RowSpan="4" Grid.Column="2" Style="{StaticResource InstellingImageRectangle}"/>

            <!--WACHTWOORD WIJZIGEN TITEL-->
            <TextBlock Text="Wachtwoord veranderen" Grid.ColumnSpan="2" Grid.Row="4" Style="{StaticResource InstellingenTussenTitel}"/>

            <!--HUIDIG WACHTWOORD-->
            <TextBlock Text="Huidig wachtwoord" Grid.Row="5" Style="{StaticResource InstellingenTextBlock}"/>
            <comps:BindablePasswordBox Password="{Binding HuidigWachtwoord}" Height="30" Grid.Row="5" Grid.Column="1"/>
            
            <!--NIEUW WACHTWOORD-->
            <TextBlock Text="Nieuw wachtwoord" Grid.Row="6" Style="{StaticResource InstellingenTextBlock}"/>
            <comps:BindablePasswordBox Password="{Binding NieuwWachtwoord}" Grid.Row="6" Height="30" Grid.Column="1"/>

            <!--BEVESTIG WACHTWOORD-->
            <TextBlock Text="Bevestig wachtwoord" Grid.Row="7" Style="{StaticResource InstellingenTextBlock}"/>
            <comps:BindablePasswordBox Grid.Row="7" Password="{Binding NieuwWachtwoordBevestiging}" Height="30" Grid.Column="1"/>

            <!--ACCOUNT INFO-->
            <Label Content="{Binding AccountInfo}" Grid.Row="4" Grid.RowSpan="4" Grid.Column="2" Style="{StaticResource InstellingenInfoLabel}"/>
        </Grid>

      
        <!--KNOPPEN-->
        <Button Command="{Binding}" CommandParameter="{x:Static commands:Commands.Opslaan}" Content="OPSLAAN" Grid.Row="1" Style="{StaticResource InstellingenWijzigWachtwoordButton}"/>
        <DockPanel Grid.Row="1" Grid.Column="1">
            <Button Command="{Binding}" CommandParameter="{x:Static commands:Commands.Afmelden}" Content="LOG UIT" Grid.Row="1" Grid.Column="1" Style="{StaticResource InstellingenLoguitAccountButton}"/>
            <Button Command="{Binding}" CommandParameter="{x:Static commands:Commands.Verwijder}" Content="VERWIJDER ACCOUNT" Grid.Row="1" Grid.Column="1" Style="{StaticResource InstellingenVerwijderAccountButton}"/>
        </DockPanel>
    </Grid>
</UserControl>
