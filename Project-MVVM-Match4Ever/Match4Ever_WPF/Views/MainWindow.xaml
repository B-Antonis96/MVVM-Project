<Window x:Class="Match4Ever_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match4Ever_WPF.Views"
        mc:Ignorable="d"
        Title="Match4Ever" Style="{StaticResource CustomWindow}">

    <Grid>
        <!--INHOUD MAINWINDOW-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--MENU-->
        <ContentControl Content="{Binding StaticNavigator.HuidigMenuViewModel}"/>
        
        <!--SCHERM-->
        <ContentControl Grid.Row="1" Content="{Binding StaticNavigator.HuidigViewModel}"/>
    </Grid>
</Window>
