<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Match4Ever_WPF.Styles">
    
    <!--CUSTOM WINDOW MAIN STIJL-->
    <Style x:Key="CustomWindow" TargetType="{x:Type Window}">
        <Setter Property="Width" Value="700"/>
        <Setter Property="Height" Value="550"/>
        <Setter Property="MaxWidth" Value="700"/>
        <Setter Property="MaxHeight" Value="550"/>
        <Setter Property="MinWidth" Value="700"/>
        <Setter Property="MinHeight" Value="550"/>
        <Setter Property="FontFamily" Value="{StaticResource MainFontFamily}"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="0.3"/>
    </Style>

    <!--STIJL VOOR CUSTOM USERCONTROL-->
    <Style x:Key="UserControlStijl" TargetType="{x:Type UserControl}">
        <Setter Property="Width" Value="700"/>
        <Setter Property="Height" Value="480"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <!--STIJL VOOR LOGIN USERCONTROL-->
    <Style x:Key="LoginControlStijl" TargetType="{x:Type UserControl}" BasedOn="{StaticResource UserControlStijl}">
        <Setter Property="Height" Value="500"/>
    </Style>

</ResourceDictionary>